<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asdtechlabs.bloodbank.SignIn"
    android:background="#ffffff"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/logoSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_slogan"
        android:layout_gravity="center"
        />




    <ImageView
        android:id="@+id/hands"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/handblooddrop"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"/>

            <Button
                android:id="@+id/phone_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:text="Sign in / Sign Up"
                style="@style/ButtonActiveBottom"
                android:background="@drawable/button_red_activated"
                android:onClick="ContinueSignIn"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp">



            <LinearLayout
                android:id="@+id/acceptTerms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signInContinueone"
            style="@style/GeneralText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signInContinuetwo"
            style="@style/GeneralText"/>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

